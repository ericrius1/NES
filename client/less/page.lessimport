@font_handwriting: 'Just Me Again Down Here', cursive;
@font_cursive: 'Gloria Hallelujah', cursive;

@px: 0.0625rem;


.page {
  width: 100%;

  box-sizing: border-box;

  padding: 0;

  background: url('/images/paper.jpg');
  background-size: 100% auto;

  box-shadow: 0 0 2em rgba(0,0,0,0.5);

  overflow: auto;

  &.storyContent {
    margin-top: 2rem;
  }

  article {
    font-size: 1.5rem;
    font-family: @font_cursive, helvetica;
  
    margin: 0 2rem;

    p {
      margin: 1rem 0;
    }
  }


  .get_name {
    font-size: 2em;
    font-family: @font_cursive, helvetica;
  }

  #waiting {
    font-size: 3em;
    font-family: @font_handwriting, helvetica;
    text-align: center;
  }

  .nameInput {
    width: 100%;
    height: 12rem;
    display: block;
    margin: 0 0 2rem 0;

    border: none;
    border-radius: 0.25rem;
    box-shadow: inset 0.125rem 0.125rem 0.5rem rgba(188,22,111,0.5);

    background: none;

    font-size: 3rem;
    font-family: @font_cursive;

    &:focus {
      outline: none;

      box-shadow: inset 0.125rem 0.225rem 0.5rem rgba(221,20,111,0.75);
    }
  }


  .clock {
    text-align: center; 
    font-family: @font_handwriting, helvetica;
    font-size: 4em;
    color: red;
  }

  .storyInput {
    width: 100%;
    max-width: 100%;
    height: 12rem;
    display: block;
    box-sizing: border-box;
    margin: 0;
    padding: 1rem 2rem;

    border: none;
    border-radius: 0.25rem;

    background: none;

    font-size: 1.5rem;
    font-family: @font_cursive;

    &:focus {
      outline: none;

      box-shadow: -0.125rem -0.125rem 0.5rem rgba(0,0,0,0.75);
    }
  }
}
